<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/resultRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        android:layout_marginBottom="4dp">
        <!-- Attack Name -->
        <TextView
            android:id="@+id/attackLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Sample"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Attack Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!-- Attack Roll -->
                <TextView
                    android:id="@+id/attackRoll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_border"
                    android:gravity="center_horizontal" />
                <!-- Attack Bonuses -->
                <LinearLayout
                    android:id="@+id/attackBonuses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
                <!-- Attack Result -->
                <TextView
                    android:id="@+id/attackResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/black_border"
                    android:textStyle="bold"
                    android:textSize="12pt"
                    android:text="Sample" />

            </LinearLayout>
            <!-- Damage Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!-- Damage Roll -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/damageRoll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/black_border"
                        android:gravity="center_horizontal"
                        android:text="Sample" />
                    <TextView
                        android:id="@+id/critRoll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:background="@drawable/black_border"
                        android:gravity="center_horizontal" />
                </LinearLayout>
                <!-- Damage Bonuses -->
                <LinearLayout
                    android:id="@+id/damageBonuses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
                <!-- Damage Results -->
                <TextView
                    android:id="@+id/damageResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/black_border"
                    android:textStyle="bold"
                    android:textSize="12pt"
                    android:text="Sample" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</merge>
