<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- Attack Name -->
    <TextView
        android:id="@+id/attackLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Sample"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Attack Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/blue_border">
            <!-- Attack Roll -->
            <TextView
                android:id="@+id/attackRoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border"
                android:gravity="center_horizontal"
                android:text="Sample" />
            <!-- Attack Bonuses -->
            <LinearLayout
                android:id="@+id/attackBonuses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
            <!-- Attack Result -->
            <TextView
                android:id="@+id/attackResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="12pt"
                android:text="Sample" />

        </LinearLayout>
        <!-- Damage Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/dark_red_border">
            <!-- Damage Roll -->
            <TextView
                android:id="@+id/damageRoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border"
                android:gravity="center_horizontal"
                android:text="Sample" />
            <!-- Damage Bonuses -->
            <LinearLayout
                android:id="@+id/damageBonuses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
            <!-- Damage Results -->
            <TextView
                android:id="@+id/damageResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="12pt"
                android:text="Sample" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>