<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- Attack Name -->
    <TextView
        android:id="@+id/attackLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Sample"/>
    <!-- Attack Section -->
    <!-- Attack Bonuses -->
    <LinearLayout
        android:id="@+id/attackBonuses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <!-- Attack Roll/Result -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <!-- Attack Roll -->
        <TextView
            android:id="@+id/attackRoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_border"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="12pt"
            android:text="Sample" />
        <!-- Attack Result -->
        <TextView
            android:id="@+id/attackResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_border"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="12pt"
            android:text="Sample" />
    </LinearLayout>

    <!-- Damage Section -->
    <!-- Damage Bonuses -->
    <LinearLayout
        android:id="@+id/damageBonuses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <!-- Damage Roll/Result -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <!-- Damage Roll -->
        <TextView
            android:id="@+id/damageRoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dark_red_border"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="12pt"
            android:text="Sample" />
        <!-- Damage Results -->
        <TextView
            android:id="@+id/damageResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dark_red_border"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="12pt"
            android:text="Sample" />
    </LinearLayout>
</LinearLayout>