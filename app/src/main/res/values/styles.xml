<resources>
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <!-- Base theme applied no matter what API -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
        <item name="windowNoTitle">true</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/medium_red</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/dark_red</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#FF4081</item>
        <!-- You can also set colorControlNormal, colorControlActivated
            colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:windowBackground">@color/parchment</item>

    </style>

    <style name="stat_box">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">@dimen/std_margin</item>
        <item name="android:padding">@dimen/std_padding</item>
        <item name="android:background">@drawable/stat_box_tiny</item>
    </style>

    <style name="data_box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/std_margin</item>
        <item name="android:padding">@dimen/std_padding</item>
        <item name="android:background">@drawable/tiny_box_patch</item>
    </style>

    <style name="data_box_full" parent="data_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/data_box_size</item>
    </style>

    <style name="data_box_fixed" parent="data_box_full">
        <item name="android:layout_width">@dimen/data_box_size</item>
    </style>

    <style name="data_box_text" parent="text_large">
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="text_large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="text_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="header_small" parent="text_small">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="text_stat_bonus" parent="text_medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>